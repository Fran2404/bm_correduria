{% extends 'base.html.twig' %}

{% block title %}Bienvenido a BM Correduría{% endblock %}

{% block body %}
    <!-- Contenido principal -->
    <div class="container text-center mt-4">
        <h1 class="display-4 mb-2">Bienvenido a BM Correduría de Seguros</h1>
        <p class="lead mb-2">Tu tranquilidad es nuestra prioridad. Encuentra el seguro perfecto para ti.</p>

        <!-- Mensaje de bienvenida y enlaces condicionales -->
        {% if app.user %}
            <div class="mt-2 mb-2">
                <p class="welcome-message mb-2">Hola, {{ app.user.email }}</p>
                <div class="d-flex justify-content-center gap-3">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-primary btn-sm">Panel de administración</a>
                    {% endif %}
                    {% if is_granted('ROLE_CLIENTE') %}
                        <a href="{{ path('app_client') }}" class="btn btn-primary btn-sm">Área de clientes</a>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        <hr class="my-2">
        <p class="mb-2">Explora nuestras opciones o contáctanos para más información.</p>
        <div class="row justify-content-center mb-3">
            <div class="col-md-4"><a href="{{ path('app_about') }}" class="btn btn-outline-primary btn-lg">Sobre Nosotros</a></div>
            <div class="col-md-4"><a href="{{ path('app_contact') }}" class="btn btn-outline-primary btn-lg">Contacto</a></div>
            <div class="col-md-4"><a href="{{ path('app_products') }}" class="btn btn-outline-primary btn-lg">Productos</a></div>
        </div>
    </div>

    <!-- Carrusel de imágenes -->
    <div class="container mt-3">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ asset('images/auto2.jpg') }}" class="d-block w-100" alt="Seguro de Auto">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('images/hogar2.jpg') }}" class="d-block w-100" alt="Seguro de Hogar">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('images/vida2.jpg') }}" class="d-block w-100" alt="Seguro de Vida">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('images/salud2.jpg') }}" class="d-block w-100" alt="Seguro de Salud">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
{% endblock %}
