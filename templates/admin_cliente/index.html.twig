{% extends 'base.html.twig' %}

{% block title %}Clientes{% endblock %}

{% block body %}
    <h1 class="mt-4">Gestión de Clientes</h1>
    <table class="table table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                <td>{{ cliente.id }}</td>
                <td>{{ cliente.nombre }}</td>
                <td>{{ cliente.email }}</td>
                <td>{{ cliente.telefono }}</td>
                <td>{{ cliente.direccion }}</td>
                <td>
                    <a href="{{ path('app_admin_cliente_show', {'id': cliente.id}) }}" class="btn btn-sm btn-info">Ver</a>
                    <a href="{{ path('app_admin_cliente_edit', {'id': cliente.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No hay clientes registrados.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mt-3">
        <a href="{{ path('app_admin_cliente_new') }}" class="btn btn-success">Crear Nuevo</a>
        <a href="{{ path('app_admin_poliza_index') }}" class="btn btn-primary">Gestionar Pólizas</a>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">Volver al Dashboard</a>
    </div>
{% endblock %}
